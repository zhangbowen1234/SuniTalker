<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="bottom">

    <RelativeLayout
        android:id="@+id/relative_container"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:paddingTop="10dip">

        <LinearLayout
            android:id="@+id/linear_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:minWidth="100dip"
            android:orientation="vertical">

            <com.silver.chat.view.recycleview.pulltorefreshable.TextGradientView
                android:id="@+id/tv_refresh_status"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="下拉可以刷新"
                />

                <TextView
                    android:id="@+id/last_refresh_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="最后更新：今天"
                    />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:layout_toLeftOf="@id/linear_header"
            android:src="@drawable/pull_icon_big"/>

        <com.silver.chat.view.recycleview.pulltorefreshable.BallSpinFadeLoader
            android:id="@+id/ball_loader"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/linear_header"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>